@model IEnumerable<schoolTest.Models.Marks>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout - Teacher.cshtml";
}


<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                        <h4 class="text-white text-capitalize ps-3" style="text-align:center">All Mark</h4>
                    </div>
                </div>
                <div class="card-body px-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder ps-2">Student Name</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder ps-2">Course Name</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder ps-2">First Exam</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder ps-2">Second Exam</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder ps-2">Participation</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder ps-2">Final Exam</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder ps-2">TotalMark</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder ps-2">Status</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>

                                    <td>
                                        <div class="d-flex px-2 py-1">

                                            <div class="d-flex flex-column justify-content-center">
                                                <h6 class="mb-0 text-sm">@(String.Format("{0} {1}", item.student.FName, item.student.LName))</h6>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <p class="mb-0 text-sm">@item.course.courseName</p>

                                    </td>
                                    <td>
                                        <p class="mb-0 text-sm">@item.FirstEx</p>

                                    </td>
                                    <td>
                                        <p class="text-xs font-weight-bold mb-0">@item.SecondEx</p>
                                    </td>
                                    <td>
                                        <p class="text-xs font-weight-bold mb-0">@item.Participation</p>
                                    </td>
                                    <td>
                                        <p class="text-xs font-weight-bold mb-0">@item.FinalEx</p>
                                    </td>
                                    <td>
                                        <p class="text-xs font-weight-bold mb-0">@item.TotalMark</p>
                                    </td>
                                    <td>
                                        <p class="text-xs font-weight-bold mb-0">@item.Status</p>
                                    </td>
                                    <td>
                                        <p class="text-xs font-weight-bold mb-0">

                                            <a asp-controller="Marks" asp-action="Edit" asp-route-id="@item.Id " class="btn btn-info">Edit</a>
                                            <a asp-controller="Marks" asp-action="Delete" asp-route-id="@item.Id " class="btn btn-danger">Delete</a>


                                        </p>
                                    </td>
                                </tr>
                                }
                                <tr>
                                    <td>

                                        <p>
                                            <a asp-controller="Student" asp-action="Create" class="btn btn-outline-success">Create New</a>
                                        </p>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>










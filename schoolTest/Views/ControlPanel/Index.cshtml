@model IEnumerable<schoolTest.Models.Student>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Shar.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card my-4">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                        <h4 class="text-white text-capitalize ps-3" style="text-align:center">Student</h4>
                    </div>
                </div>
                <div class="card-body px-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder ps-2">Student Number</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder ps-2">Student Name</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder ps-2">birth Date</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder ps-2">Location</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder ps-2">Phone</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder ps-2"></th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>
                                            <div class="d-flex px-2 py-1">

                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm">@item.student_Id</h6>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">@(String.Format("{0} {1} {2} {3}", item.FName, item.SName, item.TName, item.LName))</p>
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">@item.birthDate</p>
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">@(String.Format("{0}/ {1}/ {2}/ {3}", item.city, item.state, item.street, item.build_No))</p>
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">@item.GuardianPhone</p>
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">
                                                @*@Html.ActionLink("Edit", "Edit", new { id = item.student_Id })cl |*@
                                                <a asp-controller="Student" asp-action="Edit" asp-route-id="@item.student_Id " class="btn btn-info">Edit</a>
                                                <a asp-controller="Student" asp-action="Delete" asp-route-id="@item.student_Id " class="btn btn-danger">Delete</a>

                                                @*@Html.ActionLink("Delete", "Delete", new { id = item.student_Id })*@
                                            </p>
                                        </td>
                                    </tr>
                                }
                                <tr>
                                    <td>
                                       
                                        <p>
                                            <a asp-controller="Student" asp-action="Create" class="btn btn-outline-success">Create New</a>
                                        </p>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

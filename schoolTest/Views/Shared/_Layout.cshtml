        document.getElementById("oday").addEventListener("mouseover", function () {
            document.getElementById("oday").style.backgroundColor = "#ffb03b";
        });

        document.getElementById("oday").addEventListener("mouseout", function () {
            document.getElementById("oday").style.backgroundColor = "transparent";
        });

        document.getElementById("yazan").addEventListener("mouseover", function () {
            document.getElementById("yazan").style.backgroundColor = "#ffb03b";
        });

        document.getElementById("yazan").addEventListener("mouseout", function () {
            document.getElementById("yazan").style.backgroundColor = "transparent";
        });

        

    </script>

                    <li><a class="nav-link scrollto" href="#chefs">Proffesional Students</a></li>
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->
            @*<button class="book-a-table-btn scrollto" target="myModal">Login</button>*@
            <a class="book-a-table-btn scrollto" style="font-size:18px; color:white" data-toggle="modal" data-target="#myModal" asp-area="" asp-controller="Home" asp-action="ModalPopUp">Login</a>

        </div>
    </header><!-- End Header -->
   
    <!--Login Popup Page-->
    <div class="modal fade" id="myModal" role="dialog">

        <div class="modal-dialog" style="padding-top:150px!important">
            <div class="center-this">
                <div class="modal-content" style="position: relative; width: 500px!important; height: 350px!important; background-color: rgba(0, 0, 0, 0.60) ">

                    <!--Login Header-->
                    
                    <div class="modal-header" style="text-align:center">
                        <h4 class="modal-title" style="width:100%!important; padding-top: 2px !important; text-align:center; color: whitesmoke; font-size: 25px!important"> Login </h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>

                       
                    </div>

                    <!--Login Body-->
                    <div class="modal-body" style=" position: relative;  top: 20px;   left: 38px;">
                        @using (Html.BeginForm("Verify", "LoginAll", FormMethod.Post))
                        {
                       
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <table>
                                <tr class="form-group">
                                    <td> <label asp-for="UserNumber" class="control-label" style="color:whitesmoke"></label></td>
                                    <td>
                                        <input asp-for="UserNumber" class="form-control" style="border-radius: 20px; text-align: center; margin-left: 10%!important" />
                                        <span asp-validation-for="UserNumber" class="text-danger"></span>
                                    </td>
                                </tr>
                                <tr class="form-group" style="margin-top: 15px !important; height: 50px!important ">
                                    <td> <label asp-for="Password" class="control-label" style="color:whitesmoke"></label></td>
                                    <td>
                                        <input asp-for="Password" class="form-control" style="border-radius: 20px; text-align: center; margin-left: 10%" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </td>
                                </tr>

                            </table>


                            <input type="submit" value="Submit" id="oday"  class="navButtons" style="font-weight: 600; font-size: 13px; letter-spacing: 1px; text-transform: uppercase; display: inline-block; padding: 12px 30px; border-radius: 50px; transition: 0.5s; line-height: 1; margin: 0 10px; -webkit-animation-delay: 0.8s; animation-delay: 0.8s; color: #fff; border: 2px solid #ffb03b; animation-name: fadeInUp; animation-duration: var(--animate-duration); -webkit-animation-fill-mode: both; animation-fill-mode: both; background-color:transparent!important" />      
                            @*<a href="#menu" class="btn-menu animate__animated animate__fadeInUp scrollto">Our Menu</a>*@
                        }
                    </div>

                    <div class="modal-footer">
                        <a style="font-size:18px; color:white" data-toggle="modal" data-target="#signin" data-dismiss="modal" aria-hidden="true">Register</a>
                    </div>

                </div>
            </div>
        </div>
    </div>


    <!--Register Popup Page-->
    <div class="modal fade" id="signin" role="dialog">

        <div class="modal-dialog" style="padding-top:150px">
            <div class="center-this">
                <div class="modal-content"  style="position: relative; width: 500px!important; height: 350px!important; background-color: rgba(0, 0, 0, 0.60) ">

                    <!--signin Header-->
                    <div class="modal-header" style="text-align:center">
                        <h4 class="modal-title" style="padding-top:2px;padding-left:8em; color:whitesmoke; font-size:25px"> Register </h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>


                    </div>

                    <!--signin Body-->
                    <div class="modal-body">

                        @using (Html.BeginForm("Register", "LoginAll", FormMethod.Post))
                        {
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <table>
                                <tr class="form-group">
                                    <td> <label asp-for="UserNumber" class="control-label" style="color:whitesmoke"></label></td>
                                    <td>
                                        <input asp-for="UserNumber" class="form-control" style="border-radius: 20px; text-align: center; margin-left: 10%" />
                                        <span asp-validation-for="UserNumber" class="text-danger"></span>
                                    </td>
                                </tr>
                                <tr class="form-group" style="margin-top:15px; height:50px">
                                    <td> <label asp-for="Password" class="control-label" style="color:whitesmoke"></label></td>
                                    <td>
                                        <input asp-for="Password" class="form-control" style="border-radius: 20px; text-align: center; margin-left: 10%; margin-top: 4px;" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </td>
                                </tr>
                                <tr class="form-group" style="margin-top:15px; height:50px">
                                    <td> <label asp-for="confirmPass" class="control-label" style="color:whitesmoke"></label></td>
                                    <td>
                                        <input asp-for="confirmPass" class="form-control" style="border-radius: 20px; text-align: center; margin-left: 10%" />
                                        <span asp-validation-for="confirmPass" class="text-danger"></span>
                                    </td>
                                </tr>
                            </table>

                            <input type="submit" value="Submit" id="yazan" class="navButtons" style="font-weight: 600; font-size: 13px; letter-spacing: 1px; text-transform: uppercase; display: inline-block; padding: 12px 30px; border-radius: 50px; transition: 0.5s; line-height: 1; margin: 0 10px; -webkit-animation-delay: 0.8s; animation-delay: 0.8s; color: #fff; border: 2px solid #ffb03b; animation-name: fadeInUp; animation-duration: var(--animate-duration); -webkit-animation-fill-mode: both; animation-fill-mode: both; background-color:transparent!important" />

                        }

                    </div>
                    <div class="modal-footer">
                        <a style="font-size:18px; color:white" data-toggle="modal" data-target="#myModal" data-dismiss="modal" aria-hidden="true">Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <main id="main">

        @RenderBody()
    </main>



@model schoolTest.Models.Teacher

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Shar.cshtml";
}




<h1 class="text-danger">
    Delete Teacher
</h1>

<div class="row" >
    <div class="col-md-4" style=" width: 100%; height: 100%; display: flex; flex-direction: row; flex-wrap: wrap; justify-content: space-between ">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group" style="width:300px">
            <label asp-for="teacherId" class="control-label text-info"></label>
            <input readonly="readonly" asp-for="teacherId" class="form-control" style="border: 3px solid #ccc" />
            <span asp-validation-for="teacherId" class="text-danger"></span>
        </div>
        <div class="form-group" style="width: 300px">
            <label asp-for="fname" class="control-label text-info"></label>
            <input readonly="readonly" asp-for="fname" class="form-control" style="border: 3px solid #ccc; " />
            <span asp-validation-for="fname" class="text-danger"></span>
        </div>
        <div class="form-group" style="width: 300px">
            <label asp-for="sname" class="control-label text-info"></label>
            <input readonly="readonly" asp-for="sname" class="form-control" style="border: 3px solid #ccc" />
            <span asp-validation-for="sname" class="text-danger"></span>
        </div>
        <div class="form-group" style="width: 300px">
            <label asp-for="tname" class="control-label text-info"></label>
            <input readonly="readonly" asp-for="tname" class="form-control" style="border: 3px solid #ccc" />
            <span asp-validation-for="tname" class="text-danger"></span>
        </div>
        <div class="form-group" style="width: 300px">
            <label asp-for="lname" class="control-label text-info"></label>
            <input readonly="readonly" asp-for="lname" class="form-control" style="border: 3px solid #ccc" />
            <span asp-validation-for="lname" class="text-danger"></span>
        </div>

        <div class="form-group" style="width: 300px">
            <label asp-for="phone" class="control-label text-info"></label>
            <input readonly="readonly" asp-for="phone" class="form-control" style="border: 3px solid #ccc" />
            <span asp-validation-for="phone" class="text-danger"></span>
        </div>
        <div class="form-group" style="width: 300px">
            <label asp-for="ssn" class="control-label text-info"></label>
            <input readonly="readonly" asp-for="ssn" class="form-control" style="border: 3px solid #ccc" />
            <span asp-validation-for="ssn" class="text-danger"></span>
        </div>
        
        <div style=" width:100%"></div>
        <form asp-action="Delete" class="form-group mt-4 ml-2" style="width:50px; height:20px">
            <input type="submit" value="Delete" class="btn btn-outline-danger" style="padding:15px 45px!important; font-size:18px" />

        </form>
    </div>

</div>
@model schoolTest.ViewModel.EnrollmentViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Shar.cshtml";
}


<h1 class="text-danger">
    Create Enrollment
</h1>
    <hr />
    <div class="row">
        <div class="col-md-4" style=" width:100%; height:100%">
            <form asp-action="Create" style="display: flex; flex-direction: row; flex-wrap: wrap">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" style="width: 300px; margin-left:30px!important ">
                    <label asp-for="studentId" class="control-label">Student Name</label>
                    <select asp-for="studentId" class="form-control" style="border: 3px solid #ccc" asp-items="@(new SelectList(Model.Students, "student_Id", "FName"))"></select>
                    <span asp-validation-for="studentId" class="text-danger"></span>
                </div>
                <div class="form-group" style="width: 300px; margin-left:30px!important ">
                    <label asp-for="courseId" class="control-label">Course Name</label>
                    <select asp-for="courseId" class="form-control" style="border: 3px solid #ccc" asp-items="@(new SelectList(Model.Courses, "courseId", "courseName"))"></select>
                    <span asp-validation-for="courseId" class="text-danger"></span>
                </div>
                <div class="form-group" style="width: 300px; margin-left:30px!important ">
                    <label asp-for="startTime" class="control-label">Start Time</label>
                    <input asp-for="startTime" class="form-control" style="border: 3px solid #ccc" />
                    <span asp-validation-for="startTime" class="text-danger"></span>
                </div>
                <div class="form-group" style="width: 300px; margin-left:30px!important ">
                    <label asp-for="endTime" class="control-label">End Time</label>
                    <input asp-for="endTime" class="form-control" style="border: 3px solid #ccc" />
                    <span asp-validation-for="endTime" class="text-danger"></span>
                </div>
                <div class="form-group" style="width: 300px; margin-left:30px!important ">
                    <label asp-for="semester" class="control-label">Semester</label>
                    <input asp-for="semester" class="form-control" style="border: 3px solid #ccc" />
                    <span asp-validation-for="semester" class="text-danger"></span>
                </div>
                <div class="form-group" style="width: 300px; margin-left:30px!important ">
                    <label asp-for="year" class="control-label">Year</label>
                    <input asp-for="year" class="form-control" style="border: 3px solid #ccc" />
                    <span asp-validation-for="year" class="text-danger"></span>
                </div>
                <div style=" width:100%"></div>
                <div class="form-group mt-5 ml-2" style="width:50px; height:25px">
                    <input type="submit" value="Create" class="btn btn-outline-success" style="padding:15px 45px!important" />
                </div>
            </form>
        </div>
    </div>

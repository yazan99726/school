@model schoolTest.Models.Enrollment

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Shar.cshtml";
}
<h1 class="text-danger">
    Are you sure you want to delete this Enrollment
</h1>

<div class="row">
    <div class="col-md-4" style=" width: 100%; height: 100%; display: flex; flex-direction: row; flex-wrap: wrap">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group" style="width: 300px; margin-left: 30px !important">
            <label asp-for="enrollmentId" class="control-label text-info"></label>
            <input readonly="readonly" asp-for="enrollmentId" class="form-control" style="border: 3px solid #ccc" />
            <span asp-validation-for="enrollmentId" class="text-danger"></span>
        </div>
        <div class="form-group" style="width: 300px; margin-left: 30px !important">
            <label asp-for="startTime" class="control-label text-info">Start Time</label>
            <input readonly="readonly" asp-for="startTime" class="form-control" style="border: 3px solid #ccc" />
            <span asp-validation-for="startTime" class="text-danger"></span>
        </div>
        <div class="form-group" style="width: 300px; margin-left: 30px !important">
            <label asp-for="endTime" class="control-label text-info">End Time</label>
            <input readonly="readonly" asp-for="endTime" class="form-control" style="border: 3px solid #ccc" />
            <span asp-validation-for="endTime" class="text-danger"></span>
        </div>
        <div class="form-group" style="width: 300px; margin-left: 30px !important">
            <label asp-for="semester" class="control-label text-info"></label>
            <input readonly="readonly" asp-for="semester" class="form-control" style="border: 3px solid #ccc" />
            <span asp-validation-for="semester" class="text-danger"></span>
        </div>
        <div class="form-group" style="width: 300px; margin-left: 30px !important">
            <label asp-for="year" class="control-label text-info"></label>
            <input readonly="readonly" asp-for="year" class="form-control" style="border: 3px solid #ccc" />
            <span asp-validation-for="year" class="text-danger"></span>
        </div>
        <div style=" width:100%"></div>

        
        <form asp-action="Delete" class="form-group mt-4 ml-2" style="width:50px; height:20px">
            <input type="submit" value="Delete" class="btn btn-outline-danger" style="padding:15px 45px!important; font-size:18px" />

        </form>
    </div>

</div>


